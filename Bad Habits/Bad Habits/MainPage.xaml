<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bad_Habits.MainPage"
             NavigationPage.HasNavigationBar="False" BackgroundColor="#5973C8">

    <StackLayout x:Name="MainStack">
        <Frame BackgroundColor="#363D93"
               Padding="24" CornerRadius="0">
            <Label Text="Добавьте зависимость и избавьтесь от неё!" HorizontalTextAlignment="Center" TextColor="White" FontSize="18" FontAttributes="Bold"/>
        </Frame>
        <ScrollView>
            <StackLayout x:Name="MainStackList">

            </StackLayout>
        </ScrollView>
        <Frame HorizontalOptions="Fill" VerticalOptions="EndAndExpand" Margin="0,50,0,0" BackgroundColor="#363D93" CornerRadius="10">
            <Button x:Name="addBtn" Text="+" VerticalOptions="EndAndExpand" HorizontalOptions="End" Margin="0" CornerRadius="30" 
                Padding="0,10,0,10" FontSize="30" WidthRequest="60" BackgroundColor="#5973C8" Clicked="addBtn_Clicked" TextColor="White"></Button>
        </Frame>

    </StackLayout>
</ContentPage>
